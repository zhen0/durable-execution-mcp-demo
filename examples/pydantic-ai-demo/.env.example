# .env.example - Only for local testing
# When deployed, the flow uses Prefect variables and secret blocks

# MCP Server URL (for local testing only)
# When deployed, set this as a Prefect variable:
#   prefect variable set fastmcp-server-url "https://your-server.fastmcp.app/mcp"
FASTMCP_SERVER_URL=https://your-server.fastmcp.app/mcp

# Model Provider API Key (for local testing only)
# When deployed, set these as Prefect secret blocks:
#   from prefect.blocks.system import Secret
#   secret = Secret(value="your-key")
#   secret.save(name="anthropic-api-key")  # or "openai-api-key"

# For Anthropic Claude models:
ANTHROPIC_API_KEY=sk-ant-your-key-here

# For OpenAI models:
# OPENAI_API_KEY=sk-your-key-here

# Model to use (optional, defaults to Claude 3.5 Sonnet)
# When deployed, set as Prefect variable:
#   prefect variable set pydantic-ai-model "anthropic:claude-3-5-sonnet-20241022"
PYDANTIC_AI_MODEL=anthropic:claude-3-5-sonnet-20241022

# Logfire token (optional, for observability)
# When deployed, set as Prefect secret block:
#   secret = Secret(value="your-logfire-token")
#   secret.save(name="logfire-token")
# LOGFIRE_TOKEN=your-logfire-token
